<div class="wrap" style="background: url('https://i.redd.it/o3bpjq22dnh41.jpg') no-repeat;"></div>
<div class="container center">
<h1>Cyberpunk 2077 news</h1>
<div class="row">
{{#each newsArr}}
    <div class="col s12 m6">
      <div class="card">
        <div class="card-image">
          <img src="https://steamcdn-a.akamaihd.net/steam/apps/1091500/capsule_616x353.jpg">
          <span class="card-title purple darken-4">{{this.title}}</span>
        </div>
        <div class="card-content">
          {{this.contents}}
        </div>
        <div class="card-action">
          <script>
            function EpochToHuman(){
	            const datum = new Date({{this.date}} * 1000);
	            {{!-- alert(datum.toLocaleString()); --}}
              }
            EpochToHuman()
          </script>
          <a href="{{this.url}}">{{this.feedname}}</a>
          <time datetime="{{this.date}}">{{this.date}}</time>          
        </div>
      </div>
    </div>
{{/each}}
</div>
</div>
